<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="androidx.appcompat.widget.LinearLayoutCompat"
    android:orientation="vertical">

    <com.mercadopago.android.px.internal.view.MPTextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:lineSpacingExtra="12dp"
        android:textColor="@color/px_payment_result_black_text"
        android:textSize="@dimen/px_l_text"
        tools:text="Title" />

    <com.mercadopago.android.px.internal.view.MPTextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:lineSpacingExtra="12dp"
        android:textColor="@color/px_payment_result_gray_text"
        android:textSize="@dimen/px_s_text"
        tools:text="content sdfsdf\nsdfdsfds" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="12dp" />

</merge>