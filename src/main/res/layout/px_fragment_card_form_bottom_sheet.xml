<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.mercadopago.android.px.internal.view.MPTextView
        android:id="@+id/sheet_option_title_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="4sp"
        android:textAlignment="center"
        android:paddingTop="@dimen/px_s_margin"
        android:paddingBottom="@dimen/px_s_margin"
        android:textSize="@dimen/px_m_text"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/px_med_light_gray"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sheet_options"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

</LinearLayout>