<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/main_container"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/px_xl_alternative_margin"
    android:paddingRight="@dimen/px_xl_alternative_margin"
    android:paddingTop="@dimen/px_xl_margin"
    android:paddingBottom="@dimen/px_xl_margin">


    <com.mercadopago.android.px.internal.view.MPTextView
        android:id="@+id/px_dialog_detail_payment_method_disable_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_marginBottom="@dimen/px_l_alternative_margin"
        android:textColor="@color/px_disablePaymentMethodDetailDialogDetail"
        android:textSize="@dimen/px_s_text"
        tools:text="@string/px_dialog_detail_payment_method_disable_insufficient_amount" />

    <com.mercadolibre.android.ui.widgets.MeliButton
        android:id="@+id/px_dialog_detail_payment_method_disable_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:button_size="small"
        android:textSize="@dimen/px_s_text"
        android:text="@string/px_text_pay_with_other_method"/>
</LinearLayout>