<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="androidx.appcompat.widget.LinearLayoutCompat"
    android:orientation="vertical">

    <Space
        android:layout_width="match_parent"
        android:layout_height="4dp"/>

    <com.mercadopago.android.px.internal.view.MPTextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/px_payment_result_black_text"
        android:textSize="16dp"
        tools:text="Você pode fazer isso pelo Internet Banking com o seu código." />

    <com.mercadopago.android.px.internal.view.MPTextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="16dp"
        android:textColor="@color/px_payment_result_gray_text"
        android:background="@drawable/px_instruction_box_background"
        app:customStyle="semi_bold"
        android:textSize="16dp"
        tools:text="23793.38029 50302.092726 53006.333305 8 75070000010000" />

    <com.mercadopago.android.px.internal.view.AdapterLinearLayout
        android:id="@+id/actions"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="12dp" />

</merge>