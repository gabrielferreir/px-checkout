<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bodyErrorContainer"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:background="@color/px_white"
    android:orientation="vertical">

    <com.mercadopago.android.px.internal.view.MPTextView
        android:id="@+id/paymentResultBodyErrorTitleDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_l_margin"
        android:layout_marginEnd="@dimen/px_l_margin"
        android:layout_marginRight="@dimen/px_l_margin"
        android:layout_marginTop="@dimen/px_xl_margin"
        android:layout_marginBottom="@dimen/px_xl_margin"
        android:textColor="@color/ui_meli_dark_grey"
        android:textSize="@dimen/px_s_text"
        tools:text="Description"
        android:layout_marginStart="@dimen/px_l_margin"/>

    <com.mercadopago.android.px.internal.view.PaymentResultMethod
        android:id="@+id/primaryMethod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.mercadopago.android.px.internal.view.PaymentResultMethod
        android:id="@+id/secondaryMethod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/bodyErrorDescriptionDivider"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px_xxxs_height"
        android:importantForAccessibility="no"
        android:background="@color/px_med_light_gray"
        android:visibility="gone"/>

    <include layout="@layout/px_payment_result_help"/>

</LinearLayout>